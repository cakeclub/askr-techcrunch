<html t:type="layout" title="hackathon Index"
      t:sidebarTitle="Framework Version"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
        <!-- Most of the page content, including <head>, <body>, etc. tags, comes from Layout.tml -->

    <p:sidebar>
        <p>All Messages (2)</p>
        <p>
            [
            <t:pagelink page="Index">refresh page</t:pagelink>
            ]
        </p>
    </p:sidebar>

    <!-- A Zone is a component that can be updated in place, triggered by other components. -->
    <t:zone t:id="zone">

        <div class="message_stream">
            <ul>
                <t:loop source="messageStream" value="sms" >
                    <li class="message_card">
                        <p>${sms.message}</p>
                    </li>
                </t:loop>
            </ul>
        </div>

    </t:zone>

    <div id="message_thread">
        <ul>
            <li class="m_inbound"> My Internet's not working </li>
            <li class="m_outbound"> Have you tried turning off and on?</li>
        </ul>
    </div>

</html>
